@PACKAGE_INIT@

# Simple AtomSpace config without target exports for now
# Set basic variables that downstream projects need
set(ATOMSPACE_INCLUDE_DIR "@CMAKE_INSTALL_PREFIX@/include/")
set(ATOMSPACE_DATA_DIR "@CMAKE_INSTALL_PREFIX@/share/opencog")
set(ATOMSPACE_VERSION "@SEMANTIC_VERSION@")

# Core library directories
set(ATOMSPACE_LIBRARY_DIR "@CMAKE_INSTALL_PREFIX@/lib/opencog")

# Define the main libraries that projects typically need
set(ATOMSPACE_LIBRARY "@CMAKE_INSTALL_PREFIX@/lib/opencog/libatomspace@CMAKE_SHARED_LIBRARY_SUFFIX@")
set(ATOMSPACE_atombase_LIBRARY "@CMAKE_INSTALL_PREFIX@/lib/opencog/libatombase@CMAKE_SHARED_LIBRARY_SUFFIX@")
set(ATOMSPACE_atomcore_LIBRARY "@CMAKE_INSTALL_PREFIX@/lib/opencog/libatomcore@CMAKE_SHARED_LIBRARY_SUFFIX@")
set(ATOMSPACE_execution_LIBRARY "@CMAKE_INSTALL_PREFIX@/lib/opencog/libexecution@CMAKE_SHARED_LIBRARY_SUFFIX@")
set(ATOMSPACE_value_LIBRARY "@CMAKE_INSTALL_PREFIX@/lib/opencog/libvalue@CMAKE_SHARED_LIBRARY_SUFFIX@")

# All libraries list
set(ATOMSPACE_LIBRARIES
	atomspace
	atombase
	atomcore
	execution
	value
	truthvalue
	clearbox
	join
	pattern
	query-engine
	grounded
	smob
)

# Add library directory to link directories
link_directories("@CMAKE_INSTALL_PREFIX@/lib/opencog")

set(ATOMSPACE_FOUND 1)
